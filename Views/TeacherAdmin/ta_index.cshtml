@{
    ViewBag.Title = "TA Page";
    Layout = "_TeachAdminLayout";
}

@model List<TA>

<h1 class="text-center">TA's</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>TA Name</td>
            <td>Assigned Class</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.first_name @x.last_name</td>
            <td>@x.class_number</td>

            <td><a class="btn btn-info" asp-controller="TeacherAdmin" asp-action="Edit_ta" asp-route-id="@x.ta_netid">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="TeacherAdmin" asp-action="Delete_ta" asp-route-id="@x.ta_netid">Delete</a></td>
        </tr>
        }
    </tbody>
</table>
<button type="submit" asp-controller="TeacherAdmin" asp-action="Add_ta">Add TA</button>

