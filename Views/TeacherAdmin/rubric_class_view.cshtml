@{
    ViewBag.Title = "Class Categories";
    Layout = "_TeachAdminLayout";
}

@model List<Rubric_Item>

@*Add back button*@

@*Add up all of the points within a class*@
@{
    var totalPossiblePoints = @Model.Count();
}

<h1>@Model[0].class_number</h1>
<h4>(@totalPossiblePoints possible points)</h4>

<h2>Objectives</h2>

<table>
    <thead>
        <tr>
            <td>Points Possible</td>
            <td>Objectives</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var rubricItem in Model)
        {
        <tr>
            <td>@rubricItem.max_points</td>
            <td>@rubricItem.rubric_item_text <br /> @rubricItem.rubric_item_details</td>

            <td><a class="btn btn-info" asp-controller="TeacherAdmin" asp-action="Edit_Rubric_Item" asp-route-id="@rubricItem.rubric_item_id">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="TeacherAdmin" asp-action="Delete_Rubric_Item" asp-route-id="@rubricItem">Delete</a></td>
        </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="TeacherAdmin" asp-action="Add_Rubric_Item">Add Objective</a>
